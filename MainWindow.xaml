<Window x:Class="TestVideoWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestVideoWriter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="Write video" HorizontalAlignment="Left" Height="72" Margin="260,332,0,0" VerticalAlignment="Top" Width="193" Click="button_Click"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Height="72" Margin="503,332,0,0" VerticalAlignment="Top" Width="198" Click="button1_Click"/>
        <Button x:Name="button2" Content="Read video" HorizontalAlignment="Left" Height="72" Margin="82,332,0,0" VerticalAlignment="Top" Width="130" Click="button2_Click"/>
        <Image x:Name="imgScan" HorizontalAlignment="Left" Height="253" Margin="177,35,0,0" VerticalAlignment="Top" Width="435" Stretch="Fill"/>
        <Button x:Name="btnWebCam" Content="WebCam" HorizontalAlignment="Left" Height="36" Margin="737,368,0,0" VerticalAlignment="Top" Width="53" Click="btnWebCam_Click"/>

    </Grid>
</Window>
